<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- CUSTOM DANGEROUS PERMISSION -->
    <permission
        android:name="com.example.testassignment.MSE412"
        android:protectionLevel="dangerous" />

    <!-- USE THE CUSTOM PERMISSION -->
    <uses-permission android:name="com.example.testassignment.MSE412" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestAssignment"
        tools:targetApi="31">

        <!-- MAIN ACTIVITY (Launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SECOND ACTIVITY (Explicit + Implicit intent) -->
        <activity
            android:name=".SecondActivity"
            android:exported="true"
            android:label="@string/title_activity_second"
            android:theme="@style/Theme.TestAssignment"
            android:permission="com.example.testassignment.MSE412">
            <intent-filter>
                <action android:name="com.example.testassignment.OPEN_SECOND" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- THIRD ACTIVITY (Capture Image) -->
        <activity
            android:name=".CaptureImageActivity"
            android:exported="true" />

    </application>

</manifest>
